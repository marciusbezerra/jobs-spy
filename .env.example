# Copy this file to `.env` and fill the real values. Do NOT commit `.env`.

# MySQL (used by docker-compose)
MYSQL_ROOT_PASSWORD=change_me_root_password
MYSQL_DATABASE=jobsdb
MYSQL_USER=jobsuser
MYSQL_PASSWORD=change_me_jobsuser_password

# phpMyAdmin
PMA_BLOWFISH_SECRET=change_me_blowfish_secret
PMA_ABSOLUTE_URI=http://127.0.0.1:8080/

# Prisma (example local values)
# DATABASE_URL should point to the database user (jobsuser)
DATABASE_URL="mysql://jobsuser:change_me_jobsuser_password@127.0.0.1:3306/jobsdb"
# SHADOW_DATABASE_URL can point to a separate shadow DB or to root (dev only)
SHADOW_DATABASE_URL="mysql://jobsuser:change_me_jobsuser_password@127.0.0.1:3306/jobsdb_shadow"
